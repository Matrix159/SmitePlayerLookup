<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gvsu.cis.smiteplayerlookup.PlayerLookupActivity"
    tools:showIn="@layout/activity_player_lookup"
    android:background="@drawable/better_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/playername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/win_text_value"
            android:background="@drawable/my_border"
            android:textIsSelectable="false"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/win_text"
            android:layout_toRightOf="@+id/win_text"
            android:layout_toEndOf="@+id/win_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/loss_text_value"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/loss_text"
            android:layout_alignTop="@+id/loss_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Clan"
            android:id="@+id/clan_name"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/playername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wins"
            android:id="@+id/win_text"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/leaves_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Losses"
            android:id="@+id/loss_text"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/win_text_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/player_lookup_loading_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />

        </RelativeLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Conquest"
            android:id="@+id/conquest_ranked_button"
            android:layout_below="@+id/ranked_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duel"
            android:id="@+id/duel_ranked_button"
            android:layout_below="@+id/ranked_text"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joust"
            android:id="@+id/joust_ranked_button"
            android:layout_below="@+id/ranked_text"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ranked Stats"
            android:id="@+id/ranked_text"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/player_status_value"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/created_text"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/clan_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/login_text"
            android:background="@drawable/my_border"
            android:textColor="@color/text_color"
            android:layout_below="@+id/created_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/player_status_value"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/player_status"
            android:layout_toRightOf="@+id/player_status"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status:"
            android:id="@+id/player_status"
            android:layout_below="@+id/loss_text_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level:"
            android:id="@+id/level_text"
            android:layout_below="@+id/login_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/level_value"
            android:layout_alignTop="@+id/level_text"
            android:layout_toRightOf="@+id/level_text"
            android:layout_toEndOf="@+id/level_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Leaves:"
            android:id="@+id/leaves_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/mastery_level_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/leaves_value"
            android:layout_alignTop="@+id/leaves_text"
            android:layout_toRightOf="@+id/leaves_text"
            android:layout_toEndOf="@+id/leaves_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mastery Level:"
            android:id="@+id/mastery_level_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/level_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/mastery_level_value"
            android:layout_alignTop="@+id/mastery_level_text"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/mastery_level_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />



</RelativeLayout>
</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gvsu.cis.eldridjo.smiteplayerlookup.PlayerLookupActivity"
    tools:showIn="@layout/activity_player_lookup"
    android:background="@drawable/better_background">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/playername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/win_text_value"
            android:textIsSelectable="false"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/win_text"
            android:layout_toRightOf="@+id/win_text"
            android:layout_toEndOf="@+id/win_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/loss_text_value"
            android:textColor="@color/text_color"
            android:layout_toRightOf="@+id/loss_text"
            android:layout_alignTop="@+id/loss_text" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Clan"
            android:id="@+id/clan_name"
            android:textColor="@color/text_color"
            android:layout_below="@+id/playername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Wins: "
            android:id="@+id/win_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/leaves_text"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Losses: "
            android:id="@+id/loss_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/win_text_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/player_lookup_loading_panel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="visible">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:id="@+id/progressBar" />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/created_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/clan_name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/login_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/created_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/player_status_value"
            android:textColor="@color/text_color"
            android:layout_alignTop="@+id/player_status"
            android:layout_toRightOf="@+id/player_status"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Status:"
            android:id="@+id/player_status"
            android:layout_below="@+id/loss_text_value"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Level:"
            android:id="@+id/level_text"
            android:layout_below="@+id/login_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/text_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/level_value"
            android:layout_alignTop="@+id/level_text"
            android:layout_toRightOf="@+id/level_text"
            android:layout_toEndOf="@+id/level_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Leaves:"
            android:id="@+id/leaves_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/mastery_level_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/leaves_value"
            android:layout_alignTop="@+id/leaves_text"
            android:layout_toRightOf="@+id/leaves_text"
            android:layout_toEndOf="@+id/leaves_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Mastery Level:"
            android:id="@+id/mastery_level_text"
            android:textColor="@color/text_color"
            android:layout_below="@+id/level_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/mastery_level_value"
            android:layout_alignTop="@+id/mastery_level_text"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/mastery_level_text"
            android:textColor="@color/text_color"
            android:layout_marginLeft="5dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/player_status_value"
            android:id="@+id/fragmentHolder"
            android:layout_above="@+id/bottom_navigation"></FrameLayout>

        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true" />


</RelativeLayout>
</ScrollView>
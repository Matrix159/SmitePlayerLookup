<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.gvsu.cis.eldridjo.smiteplayerlookup.GodListActivity"
    tools:showIn="@layout/activity_god_list"
    android:background="@drawable/better_background">
    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/better_background"/>
    <RelativeLayout
        android:id="@+id/loadingPanelGods"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/god_list_progress_bar"
            android:indeterminate="true"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@+id/god_list_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/god_list_progress_bar"
            android:text="@string/downloading"
            android:textColor="@color/text_color"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/grid_recycler_view"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/better_background"
        android:visibility="gone"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@id/god_list_progress_bar"
            android:indeterminate="true"
            android:layout_centerInParent="true" />
        <TextView
            android:id="@id/god_list_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/god_list_progress_bar"
            android:text="@string/downloading"
            android:textColor="@color/text_color"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</RelativeLayout>
